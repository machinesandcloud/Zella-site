# IBKR Configuration
IBKR_HOST=127.0.0.1
IBKR_PAPER_PORT=7497
IBKR_LIVE_PORT=7496
IBKR_CLIENT_ID=1

# Database
DATABASE_URL=postgresql+psycopg2://user:password@localhost:5432/trading_bot
SQLITE_URL=sqlite:///./trading_bot.db
REDIS_URL=redis://localhost:6379
USE_SQLITE=false

# Security
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Trading Defaults
DEFAULT_TRADING_MODE=PAPER
MAX_POSITION_SIZE_PERCENT=10
MAX_DAILY_LOSS=500
MAX_RISK_PER_TRADE=2
MAX_CONCURRENT_POSITIONS=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/trading_bot.log

# QA/Dev
USE_MOCK_IBKR=true
USE_FREE_DATA=false
USE_IBKR_WEBAPI=false

# Alpaca Trading Configuration
# Get your API keys from: https://app.alpaca.markets/paper/dashboard/overview
# IMPORTANT: Use paper trading API keys for testing ($100k virtual money)
USE_ALPACA=false
ALPACA_API_KEY=
ALPACA_SECRET_KEY=
ALPACA_PAPER=true

# Screener defaults
SCREENER_MIN_AVG_VOLUME=500000
SCREENER_MIN_PRICE=5
SCREENER_MAX_PRICE=1000
SCREENER_MIN_VOLATILITY=0.005
